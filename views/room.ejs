  <body>
    <div class="app">
      <div class="app__left">
        <header><%- include('partials/header') %></header>
        <div class="col1">
        <div class="app_videos">
          <div id="bunch-of-videos">

          </div>
        </div>
        <app_controls><%- include('partials/app_controls'); %></app_controls>
        <footer><%- include('partials/footer.ejs'); %></footer>
      </div>
    </div>
      <div class="app__right">
        <chat_window><%- include('partials/chat_window'); %></chat_window>
      </div>
    </div>
  </body>

  <script>
    const ROOM_ID = "<%= roomId %>"; //the room Id!
    document.getElementsByClassName("header_info")[0].innerHTML += `Room ID: ${ROOM_ID}`;
    var USER = prompt("Your Name")
    if(!USER)
    {
      USER = "Anonymous"
    }
    var  node = document.getElementsByClassName("box_title")[0]
    console.log(node)
    localStorage.setItem('username', USER)
    node.innerHTML = `Chat with ${USER}`; 
  </script>
